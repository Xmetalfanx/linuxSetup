function AddAppPPAs
{
    clear
    ## Add Application PPAs
    echo "Adding Application/Program PPA "
    autoAddRepo ppa:costales/anoise && autoAddRepo ppa:danielrichter2007/grub-customizer && autoAddRepo ppa:gnumdk/lollypop && autoAddRepo ppa:heyarje/makemkv-beta && autoAddRepo ppa:kvibes/mediaelch
    autoAddRepo ppa:libreoffice/ppa && autoAddRepo ppa:linvinus/altyo && autoAddRepo ppa:nathandyer/vocal-daily && autoAddRepo ppa:dimula73/krita && autoAddRepo ppa:peterlevi/ppa

    GetDebsPPA

    ## sudo add-apt-repository ppa:peterlevi/ppa is for Variety
}


function aptUpdate
{
  clear
  echo -e "Refreshing Repo List"
  read -p "Press a key to continue "
  sudo apt update
  echo "Repos Refreshed"
}

function aptUpgrade
{
  aptUpdate
  clear
  echo "Upgrading (with a prompt to the user)"
  read -p "Press a key to continue "
  sudo apt upgrade
  read -p
}

function getDebsPPA
{
  wget -q -O - http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
  sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu xenial-getdeb apps" >> /etc/apt/sources.list.d/getdeb.list'
  clear
  sudo apt update

}

function getGamesPPA
{
    clear

    echo "Adding Gaming PPA from Getdebs.net"
    wget -q -O - http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
    sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu xenial-getdeb games" >> /etc/apt/sources.list.d/getdeb.list'
    clear

}

function addThemePPAs
{
    clear

    echo "Adding Theme and Icon Pack, next ... Press [Enter] key to continue"
    read
    autoAddRepo ppa:ravefinity-project/ppa && autoAddRepo ppa:moka/stable && autoAddRepo ppa:noobslab/icons && autoAddRepo ppa:noobslab/icons2  && autoAddRepo ppa:noobslab/themes && autoAddRepo ppa:numix/ppa && autoAddRepo ppa:snwh/pulp
    clear

    sudo apt-get update
    echo  "PPAs/ Repositories added for Themes and Icons.  Press [Enter] key to continue"
    read
    clear

}

function installPPAThemes
{

  clear
  echo -e "Installing the Ambiance, Radiance, Numix, Vertex, Moka, kawaiki, and Arc Themes via PPA"
  read -p "Press a Key to continue"


  ## Install Themes from PPAs Added
  sudo apt-get install ambiance-colors radiance-colors moka-gtk-theme arc-icons vertex-icons kawaiki-icons arc-theme numix-icon-theme numix-icon-theme-circle numix-gtk-theme

  clear

}
