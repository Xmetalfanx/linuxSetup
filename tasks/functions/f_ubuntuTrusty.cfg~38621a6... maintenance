function AddAppPPAs
{
    clear
    ## Add Application PPAs
    echo "Adding Application/Program PPA "
    addPPA ppa:costales/anoise && addPPA ppa:danielrichter2007/grub-customizer && addPPA ppa:gnumdk/lollypop && addPPA ppa:heyarje/makemkv-beta && addPPA ppa:kvibes/mediaelch
    addPPA ppa:libreoffice/ppa && addPPA ppa:linvinus/altyo && addPPA ppa:nathandyer/vocal-daily && addPPA ppa:dimula73/krita && addPPA ppa:peterlevi/ppa

    GetDebsPPA

    ## addPPA ppa:peterlevi/ppa is for Variety
}

function getDebsPPA
{
  wget -q -O - http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
  sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu xenial-getdeb apps" >> /etc/apt/sources.list.d/getdeb.list'
  clear
  aptUpdate

}

function getGamesPPA
{
    clear

    echo "Adding Gaming PPA from Getdebs.net"
    wget -q -O - http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
    sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu xenial-getdeb games" >> /etc/apt/sources.list.d/getdeb.list'
    clear

}

function addThemePPAs
{
    clear

    echo "Adding Theme and Icon Pack, next ... Press [Enter] key to continue"
    read
    addPPA ppa:ravefinity-project/ppa && addPPA ppa:moka/stable && addPPA ppa:noobslab/icons && addPPA ppa:noobslab/icons2  && addPPA ppa:noobslab/themes && addPPA ppa:numix/ppa && addPPA ppa:snwh/pulp
    clear

    aptUpdate
    echo  "PPAs/ Repositories added for Themes and Icons.  Press [Enter] key to continue"
    read
    clear

}

function installPPAThemes
{

  clear
  echo -e "Installing the Ambiance, Radiance, Numix, Vertex, Moka, kawaiki, and Arc Themes via PPA"
  aptUpdate


  ## Install Themes from PPAs Added
  sudo apt-get install ambiance-colors radiance-colors moka-gtk-theme arc-icons vertex-icons kawaiki-icons arc-theme numix-icon-theme numix-icon-theme-circle numix-gtk-theme

  clear

}
